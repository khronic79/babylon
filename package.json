{
  "name": "hardhat-project",
  "scripts": {
    "format:tests": "npx prettier --write 'test/*.{js,ts,sol}'",
    "format:scripts": "npx prettier --write 'scripts/*.{js,ts,sol}'",
    "format:check": "npx prettier --check '**/*.{js,ts,sol}'",
    "format:sol": "npx prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "hardhat": "^2.24.0",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "dotenv": "^16.5.0",
    "solhint": "^5.1.0",
    "viem": "^2.30.0"
  }
}
